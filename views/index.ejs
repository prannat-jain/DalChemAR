<!-- Include the header and navbar partials -->
<%- include('partials/header') %>
<% if (isAdmin) { %>
  <%- include('partials/navbarAdmin') %>
<% } %>
<% if (!isAdmin) { %>
  <%- include('partials/navbar') %>
<% } %>
 

<div class="container">
  <div class="row bg-light rounded-3 bg-dark text-white">
    <div class="col-12 pt-4">
      <h1 class="display-4 fw-bold">Chemistry + Augmented Reality</h1>
      <p class="col-md-8 fs-4">View molecular diagrams in augmented reality using only a web browser</p>
      <div class="col-md-4 mb-5">
        <a href="/molecules" class="btn btn-outline-light btn-lg bg-darker" type="button">
          Browse All Molecules
        </a>
        <br>
      </div>

      <div class="row align-items-md-stretch">
        <div class="col-md-6">
          <div class="h-100 rounded-3">
            <h2>Instructions</h2>
            <ol>
              <li>
                Browse the catalog to see a list of available molecules
              </li>
              <li>
                Click on a molecule's name or CSID to open its webpage
              </li>
              <li>
                Scan the displayed QR code with your phone's camera application or QR code reader to retrieve a link to
                the augmented reality viewer for that molecule
              </li>
              <li>
                Point your camera in the direction of the marker and you will see the molecule appear.
              </li>
            </ol>
          </div>
        </div>
        <!-- Some SVG Circles representing atoms -->
        <div class="col-md-6 mb-4 ">
          <div class="h-100 text-white bg-dark rounded-3">
            <div class="row">
              <div class="col">
                <div class="svg-container">
                  <svg class="svg-icon" width="100" height="100">
                    <rect x="0" y="0" width="100" height="100" fill="none" />
                    <circle cx="50" cy="50" r="40" stroke="white" stroke-width="4" fill="#222" />
                    <text x="50" y="55" font-size="20" text-anchor="middle" fill="white">C</text>
                  </svg>
                </div>
              </div>

              <div class="col">
                <div class="svg-container">
                  <svg class="svg-icon" width="100" height="100">
                    <rect x="0" y="0" width="100" height="100" fill="none" />
                    <circle cx="50" cy="50" r="25" stroke="white" stroke-width="4" fill="red" />
                    <text x="50" y="55" font-size="20" text-anchor="middle" fill="white">O</text>
                  </svg>
                </div>
              </div>

              <div class="col">
                <div class="svg-container">
                  <svg class="svg-icon" width="100" height="100">
                    <rect x="0" y="0" width="100" height="100" fill="none" />
                    <circle cx="50" cy="50" r="15" stroke="white" stroke-width="4" fill="#aaa" />
                    <text x="50" y="55" font-size="20" text-anchor="middle" fill="white">H</text>
                  </svg>
                </div>
              </div>

              <div class="col">
                <div class="svg-container">
                  <svg class="svg-icon" width="100" height="100">
                    <rect x="0" y="0" width="100" height="100" fill="none" />
                    <circle cx="50" cy="50" r="30" stroke="white" stroke-width="4" fill="dodgerblue" />
                    <text x="50" y="55" font-size="20" text-anchor="middle" fill="white">N</text>
                  </svg>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>