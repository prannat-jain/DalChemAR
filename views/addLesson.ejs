<%- include('partials/navbar')%>
<div class="container">
    <div class="row content">
        <div class="col-12 pt-4 text-start text-white bg-dark">
            <h1 class="display-4 fw-bold">Add New Lesson</h1>
    
    <form class="d-flex justify-content-center flex-wrap" action="/addLesson" method="POST" id="addLessonForm">
        <div class="row d-flex flex-wrap">
            <div class="col-12 col-sm-6 d-flex  flex-wrap">
                <h4>Scene name:</h4>
                <input type="text" class="form-control" id="lessonName" name="name" placeholder="Lesson name"  required>
                <h4>Description:</h4>
                <input type="text" class="form-control" id="lessonDescription" name="description" placeholder="Description"  required>
                <button class="form-control my-4 w-50">Submit</button>
            </div>
            <div class="col-12 col-sm-6 d-flex align-content-stretch flex-wrap">
                <textarea class="form-control" name="preview" id="preview" style="display: none"></textarea>
            </div>
        </div>
    </form> 
